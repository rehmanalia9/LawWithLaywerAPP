<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lawyer.LawyerAppointmentsDetailsActivity">

    <RelativeLayout
        android:id="@+id/dtoplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/black">

        <TextView
            android:id="@+id/sstxtdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check uploaded screenshot of transaction and update the appointment status"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/black"
            android:padding="10dp"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/patimage"
        android:layout_width="168dp"
        android:layout_height="157dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/client"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <LinearLayout
        android:id="@+id/namell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/patimage"
        android:textAlignment="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Doctor Name"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/patname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Doctor"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/appointmentnoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/namell"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment No."
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/appno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Appointment No."
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/datell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/appointmentnoll"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAlignment="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/datetextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:textAlignment="center"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/slotll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/datell"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot"
            android:textAlignment="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/slottextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot"
            android:textAlignment="center"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/statuslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/slotll"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Status"
            android:textAlignment="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/dstatustxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Approved"
            android:textAlignment="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@drawable/buttons"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dsslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/statuslayout"
        android:background="@drawable/textbox"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/dsstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on Image"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/dssimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/client"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/jointbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dsslayout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttons"
        app:backgroundTint="@color/black"
        android:onClick="GoDashboardactivity"
        android:text="Start Meeting" />

</RelativeLayout>

