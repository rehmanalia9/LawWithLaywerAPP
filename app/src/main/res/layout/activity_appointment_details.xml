<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.AppointmentDetailsActivity">


    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/black">

        <TextView
            android:id="@+id/sstxtdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please pay doctor through doctor's jazzcash provided number and upload screenshot of transsaction"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/patientimg"
        android:layout_width="168dp"
        android:layout_height="157dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/lawyer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <LinearLayout
        android:id="@+id/namelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/patientimg"
        android:textAlignment="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Lawyer Name"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/doctorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Lawyer"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/jazzcashlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/namelayout"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jazzcash Number"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/doctorjazzcash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jazzcash Number"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/appointmentnolayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/jazzcashlayout"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment No."
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/appointmentno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Appointment No."
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/datelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/appointmentnolayout"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAlignment="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lawyer"
            android:textAlignment="center"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/slotlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/datelayout"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot"
            android:textAlignment="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot"
            android:textAlignment="center"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/statuslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/slotlayout"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Status"
            android:textAlignment="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/statustxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Approved"
            android:textAlignment="center"
            android:layout_weight="1"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/sslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/statuslayout"
        android:background="@drawable/textbox"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/sstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Screenshot"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ssimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/clienta"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/jointbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Meeting"
        android:background="@drawable/buttons"

        android:layout_below="@+id/sslayout"
        android:layout_margin="20dp"
        android:onClick="GoDashboard"
        android:visibility="gone"
        />
</RelativeLayout>