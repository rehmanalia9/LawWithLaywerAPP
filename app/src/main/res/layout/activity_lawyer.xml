<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lawyer.LawyerActivity">

    <RelativeLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_gravity="top"
        >


        <!-- <RelativeLayout
             android:id="@+id/searchlayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:background="@color/light">

             <SearchView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>

         </RelativeLayout>-->

        <!-- <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/doctoslistRV"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_above="@+id/appointmentRL"
             android:layout_below="@+id/searchlayout" />-->

        <FrameLayout
            android:id="@+id/DocFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomtRL"
            android:layout_alignParentTop="true"
            />

        <RelativeLayout
            android:id="@+id/bottomtRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            >



            <LinearLayout
                android:id="@+id/appoinmentslayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/homelayout"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/appointment"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointments"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profilelayuot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/appoinmentslayout"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/users"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textAlignment="center"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>