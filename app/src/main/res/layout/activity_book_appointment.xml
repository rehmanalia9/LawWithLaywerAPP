<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Client.BookAppointmentActivity"
    android:weightSum="10"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/patientimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user"
                android:layout_gravity="center"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/patientname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Client Name"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:background="@drawable/input_design"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/input_design"
                android:hint="Enter Client Age"
                android:inputType="phone"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/patientphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/input_design"
                android:hint="Enter Clinet Contact"
                android:inputType="phone"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select Date"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textSize="17sp"
                android:layout_weight="1"
                android:background="@drawable/input_design"
                />

            <EditText
                android:id="@+id/patientdetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/details_edittext"
                android:hint="Write a short note about Case history"
                android:maxLength="100"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/input_design"
                >

                <TextView
                    android:id="@+id/reporttextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload report(optional)"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/reportimage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/input_design"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please select a slot for meeting"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_weight="1.5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/firstslot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:30pm-5:00pm"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/textbox"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/secondslot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:00pm - 5:30pm"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/textbox"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/thirdslot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:30pm - 6:00pm"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/textbox"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="3">
                <TextView
                    android:id="@+id/forthslot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6:00pm - 6:30pm"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/textbox"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/fifthslot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6:30pm - 7:00pm"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/textbox"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/sixthslot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:00pm - 7:30pm"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/textbox"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <Button
                android:id="@+id/book_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Book Appointment"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:backgroundTint="@color/black"
                android:background="@drawable/buttons"
                android:textSize="11sp"
                android:layout_weight="1"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>